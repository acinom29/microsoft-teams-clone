    <script>
        var socket = io.connect('https://microsoftteamsapp.herokuapp.com/');
        // submit text message without reload/refresh the page
        $('form').submit(function (e) {
            e.preventDefault(); // prevents page reloading
            socket.emit('chat_message', $('#txt').val());
            $('#txt').val('');
            return false;
        });

        // append the chat text message
        socket.on('chat_message', function (msg) {
            $('#messages').append($('<li id="msg">').html(msg));
        });

        // append text if someone is online
        socket.on('is_online', function (username) {
            $('#messages').append($('<li id="join">').html(username));
        });

        // ask username
        var username = prompt('Please tell me your name');
        socket.emit('username', username);

        //generate random id
        const generateId = document.querySelector('#generate-id');
        generateId.addEventListener('click', () => {
            console.log('im working');
            const roomId = makeId(12);
            idText.innerHTML = roomId;
            // `${"room-id: "roomId}`;
            const room = document.querySelector("#room-input");
            room.value = roomId;
        });
        //make id function
        function makeId(length) {
            let result = "";
            let characters = "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789";
            let charLength = characters.length;
            for (let i = 0; i < length; i++) {
                result += characters.charAt(Math.floor(Math.random() * charLength));
            }
            return result;
        }

        //in development features
        const idText = document.querySelector('#meet-id');
        const cambtn = document.querySelector('#camera-btn');
